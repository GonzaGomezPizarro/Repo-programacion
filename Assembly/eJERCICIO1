			;Practico	5
			;Ejercicio	1
			MOV		R0, #0 ; EL NUMERO A EVALUAR
			MOV		R1, #0 ; ESTE VA A SER EL CONTADOR
LOOP
			AND		R2,R0,#1 ;EN R2 SE GUARDA 1 SI EL ULTIMO DIGITO ES 1 Y 0 SI NO LO ES
			CMP		R2,#1 ; SE COMPARA SI TIENE UN UNO O NO
			ADDEQ	R1,R1,#1 ; SE SUMA 1 EN EL CONTADOR SI EL ULTIMO DIGITO ES 1
			CMP		R0,#2
			BGE		DIVISIONX2 ; DIVIDIMOS X 2 A R0
			B		ENDD
			
DIVISIONX2
			SUB		R0, R0,#2
			ADD		R4,R4,#1 ; CONTADOR
			CMP		R0,#2
			BGE		DIVISIONX2
			B		CONTINUE
CONTINUE
			MOV		R0,R4
			MOV		R4,#0
			CMP		R0,#1
			ADDEQ	R1,R1,#1
			BGT		LOOP
			B		ENDD
ENDD
			END
